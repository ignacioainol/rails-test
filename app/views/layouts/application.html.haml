          %span.navbar-toggler-icon
        #navbarCollapse.collapse.navbar-collapse
          %ul.navbar-nav.mr-auto
            %li.nav-item
              %a.nav-link{:href => "#"} Inicio
            %li.nav-item
              %a.nav-link{:href => "#ts"} Habilidades
            %li.nav-item
              %a.nav-link{:href => "#pe"} Portafolio
            %li.nav-item
              %a.nav-link{:href => "#we"} Experiencia
            %li.nav-item.dropdown
              %a#navbarDropdownMenuLink.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "http://examples.com"} Categorias
              .dropdown-menu{"aria-labellebdy" => "navbarDropdownMenuLink"}
                %a.dropdown-item{:href => "#"}Categoria #  n
                %a.dropdown-item{:href => "#"}Categoria #  n
                %a.dropdown-item{:href => "#"}Categoria #  n                
            - if user_signed_in?

            - else
              %li.nav-item
                = link_to new_user_session_path, class:"nav-link" do
                  %i.fa.fa-user.fa-fw
          %form.form-inline.mt-2.mt-md-0
            %input.form-control.mr-sm-2{"aria-label" => "Search", :placeholder => "Search", :type => "text"}/
            %button.btn.btn-outline-success.my-2.my-sm-0{:type => "submit"} Search

  %p.notice= notice
  %p.alert= alert
  .container
    .row
      = yield


